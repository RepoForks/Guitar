<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="10dip">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/img_listitem_file"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_music" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_listitem_filename"
            style="@style/text_large_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Dummy File" />


        <TextView
            android:id="@+id/txt_listitem_albumname"
            style="@style/text_small_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="Dummy Singer" />

        <TextView
            android:id="@+id/txt_listitem_duration"
            style="@style/text_small_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:singleLine="true"
            android:text="1:40" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_playing_item_song_list"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:src="@drawable/uamp_ic_play_arrow_white_48dp"
        android:tint="@color/bt_accent" />

</LinearLayout>